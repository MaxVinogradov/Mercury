<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="vinogradov">
        <createTable tableName="services"> <!-- DONE-->
            <column name="service_name" type="varchar(50)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <insert tableName="services">
            <column name="service_name" value="vk.com'"/>
            <column name="service_name" value="facebook.com"/>
            <column name="service_name" value="twitter.com"/>
        </insert>
    </changeSet>

    <changeSet id="2" author="vinogradov">
        <createTable tableName="accounts">
            <column name="account_id" type="int(10)">
                <constraints primaryKey="true" primaryKeyName="accounts_i"/>
            </column>
            <column name="service_name" type="varchar(50)">
                <constraints nullable="false" referencedTableName="services"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_token" type="varchar(100)"/>
        </createTable>

        <createIndex tableName="accounts" indexName="accounts_i">
            <column name="account_id" type="int(10)"/>
        </createIndex>
        
        <addUniqueConstraint tableName="accounts"
                             columnNames="service_name, login"
                             constraintName="service_login_uk"
        />
    </changeSet>

    <changeSet id="3" author="vinogradov">
        <createTable tableName="users">
            <column name="user_id" type="int(10)">
                <constraints primaryKeyName="users_i"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="users" indexName="users_i">
            <column name="user_id" type="int(10)"/>
        </createIndex>
    </changeSet>

    <changeSet id="4" author="vinogradov">
        <createTable tableName="posts">
            <column name="post_id" type="int(10)">
                <constraints primaryKeyName="post_i"/>
            </column>
            <column name="user_id" type="int(10)">
                <constraints nullable="false" referencedTableName="user"/>
            </column>
            <column name="publish_date" type="date)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(200)"/>
            <column name="body" type="varchar(4000)"/>
        </createTable>

        <createIndex tableName="posts" indexName="posts_i">
            <column name="post_id" type="int(10)"/>
        </createIndex>
    </changeSet>

    <changeSet id="5" author="vinogradov">
        <createTable tableName="portals">
            <column name="user_id" type="int(10)">
                <constraints nullable="false" referencedTableName="user"/>
            </column>
            <column name="account_id" type="int(10)">
                <constraints nullable="false" references="accounts"/>
            </column>
        </createTable>

        <createIndex tableName="portals" indexName="portals_uk">
            <column name="user_id" type="int(10)"/>
            <column name="account_id" type="int(10)"/>
        </createIndex>

        <addUniqueConstraint tableName="portals"
                             columnNames="user_id, account_id"
                             constraintName="portals_uk"
        />
    </changeSet>

    <changeSet id="6" author="vinogradov">
        <createSequence sequenceName="users_seq"/>
        <createSequence sequenceName="accounts_seq"/>
        <createSequence sequenceName="posts_seq"/>
    </changeSet>

</databaseChangeLog>