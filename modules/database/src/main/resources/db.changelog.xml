<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="vinogradov">
        <createTable tableName="services"> <!-- DONE-->
            <column name="service_name" type="varchar(50)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <insert tableName="services">
            <column name="service_name" value="vk.com'"/>
            <column name="service_name" value="facebook.com"/>
            <column name="service_name" value="twitter.com"/>
        </insert>
    </changeSet>

    <changeSet id="2" author="vinogradov">
        <createTable tableName="accounts">
            <column name="account_id" type="int(10)">
                <constraints primaryKey="true" primaryKeyName="accounts_i"/>
            </column>
            <column name="service_name" type="varchar(50)">
                <constraints nullable="false" referencedTableName="services"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_token" type="varchar(100)"/>
        </createTable>

        <createIndex tableName="accounts" indexName="accounts_i">
            <column name="account_id" type="int(10)"/>
        </createIndex>
        
        <addUniqueConstraint tableName="accounts"
                             columnNames="service_name, login"
                             constraintName="service_login_uk" />
    </changeSet>

    <changeSet id="3" author="vinogradov">
        <createTable tableName="users">
            <column name="user_id" type="int(10)"/>
            <column name="login" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="users" indexName="users_i">
            <column name="user_id" type="int(10)"/>
        </createIndex>
    </changeSet>



</databaseChangeLog>